---
// src/pages/index.astro
import "../styles/global.css";

const features = [
  { 
    name: "GAAP-Compliant Double-Entry", 
    description: "Maintain accurate and professional financial records with a robust double-entry bookkeeping system.", 
    icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2" 
  },
  { 
    name: "Multi-Entity & Property Management", 
    description: "Seamlessly manage finances across multiple properties and legal entities from a single dashboard.", 
    icon: "M4 6h16M4 10h16M4 14h16M4 18h16" 
  },
  { 
    name: "Comprehensive Financial Reporting", 
    description: "Generate Income Statements, Balance Sheets, Cash Flow statements, and custom reports with ease.", 
    icon: "M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" 
  },
  { 
    name: "Bank Reconciliation & Imports", 
    description: "Easily reconcile bank statements and import transactions via CSV to save time and reduce errors.", 
    icon: "M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" 
  },
  { 
    name: "Notes Receivable (Loans)", 
    description: "Track loans you've issued, including amortization schedules, interest accruals, and payments.", 
    icon: "M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" 
  },
  { 
    name: "Zero Cost & High Performance", 
    description: "Built with modern edge technologies for exceptional speed and reliability, with no hosting fees.", 
    icon: "M13 10V3L4 14h7v7l9-11h-7z" 
  }
];
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Estate Accounting | Simple, Powerful & Free</title> 
    <meta name="description" content="A zero-cost, high-performance accounting solution for real estate owners. GAAP-compliant, intuitive, and scalable.">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-neutral-50 text-neutral-800 antialiased font-sans">
    <header class="bg-white border-b border-neutral-200 sticky top-0 z-50 shadow-sm">
      <div class="container-xl">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2 text-xl font-bold text-primary-600 hover:text-primary-700 transition-colors">
              <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M3.75 3A.75.75 0 003 3.75v16.5c0 .414.336.75.75.75h16.5A.75.75 0 0021 20.25V3.75A.75.75 0 0020.25 3H3.75zM6.5 6.25a.75.75 0 01.75-.75h2.5a.75.75 0 010 1.5h-2.5a.75.75 0 01-.75-.75zm0 3.5a.75.75 0 01.75-.75h6.5a.75.75 0 010 1.5h-6.5a.75.75 0 01-.75-.75zm0 3.5a.75.75 0 01.75-.75H17a.75.75 0 010 1.5H7.25a.75.75 0 01-.75-.75zm.75 2.75a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5h-4.5z" clip-rule="evenodd" />
              </svg>
              <span>Real Estate Accounting</span>
            </a>
          </div>
          <nav class="hidden sm:flex items-center space-x-4">
            <a href="#features" class="px-3 py-2 text-sm font-medium text-neutral-600 hover:text-primary-600 transition-colors">
              Features
            </a>
            <a href="/auth/signin" class="px-3 py-2 text-sm font-medium text-neutral-600 hover:text-primary-600 transition-colors">
              Sign In
            </a>
            <a href="/auth/signup" class="btn-primary">
              Sign Up Free
            </a>
          </nav>
        </div>
      </div>
    </header>
    
    <main>
      <!-- Hero Section -->
      <section class="bg-gradient-to-b from-white to-neutral-50 py-16 sm:py-20 lg:py-24">
        <div class="container-xl">
          <div class="text-center">
            <h1 class="heading-1 mb-6">
              Professional Real Estate Accounting
              <span class="block text-primary-600">Without the Cost</span>
            </h1>
            <p class="text-body-lg max-w-3xl mx-auto">
              A zero-cost, high-performance accounting solution built specifically for real estate owners and investors.
            </p>
            <div class="mt-10 flex flex-wrap justify-center gap-4">
              <a href="/auth/signup" class="btn-primary btn-lg">
                Get Started Free
              </a>
              <a href="#features" class="btn-outline btn-lg">
                Learn More
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section id="features" class="py-20 sm:py-24 bg-white">
        <div class="container-xl">
          <div class="text-center mb-16">
            <h2 class="heading-2 mb-4">Everything You Need, Nothing You Don't</h2>
            <p class="text-body-lg max-w-3xl mx-auto">
              Designed specifically for real estate owners and investors, our platform combines professional accounting features with an intuitive interface.
            </p>
          </div>
          <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {features.map((feature) => (
              <div class="card p-6">
                <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon}></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-neutral-900 mb-2">{feature.name}</h3>
                <p class="text-neutral-600">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="bg-gradient-to-r from-primary-700 to-primary-800 py-20 text-white">
        <div class="container-lg text-center">
          <h2 class="heading-2 text-white mb-6">Ready to Get Started?</h2>
          <p class="text-body-lg text-primary-100 max-w-3xl mx-auto">
            Join other real estate professionals using our platform to streamline their accounting and financial management.
          </p>
          <div class="mt-10">
            <a href="/auth/signup" class="bg-white text-primary-700 hover:bg-primary-50 px-8 py-3 text-lg font-medium rounded-lg shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-primary-700 focus:ring-white transition-colors">
              Create Your Free Account
            </a>
          </div>
        </div>
      </section>
    </main>
    
    <footer class="bg-white border-t border-neutral-200 py-10">
      <div class="container-xl text-center">
        <p class="text-neutral-500">
          Real Estate Accounting | &copy; {new Date().getFullYear()} All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
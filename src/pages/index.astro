---
// src/pages/index.astro
import "../styles/global.css"; // Import global styles for consistency

const features = [
  { 
    name: "GAAP-Compliant Double-Entry", 
    description: "Maintain accurate and professional financial records with a robust double-entry bookkeeping system.", 
    icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2" // Calculator or ledger icon might be more fitting
  },
  { 
    name: "Multi-Entity & Property Management", 
    description: "Seamlessly manage finances across multiple properties and legal entities from a single dashboard.", 
    icon: "M4 6h16M4 10h16M4 14h16M4 18h16" // Building or folder structure icon
  },
  { 
    name: "Comprehensive Financial Reporting", 
    description: "Generate Income Statements, Balance Sheets, Cash Flow statements, and custom reports with ease.", 
    icon: "M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" // Document or chart icon
  },
  { 
    name: "Bank Reconciliation & Imports", 
    description: "Easily reconcile bank statements and import transactions via CSV to save time and reduce errors.", 
    icon: "M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" // Bank or checkmark icon
  },
  { 
    name: "Notes Receivable (Loans)", 
    description: "Track loans you've issued, including amortization schedules, interest accruals, and payments.", 
    icon: "M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" // Loan or money icon
  },
  { 
    name: "Zero Cost & High Performance", 
    description: "Built with modern edge technologies for exceptional speed and reliability, with no hosting fees.", 
    icon: "M13 10V3L4 14h7v7l9-11h-7z" // Rocket or lightning bolt icon
  }
];
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real Estate Accounting | Simple, Powerful & Free</title> 
    <meta name="description" content="A zero-cost, high-performance accounting solution for real estate owners. GAAP-compliant, intuitive, and scalable. Manage multiple properties, track expenses, and generate financial reports.">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script src="/alpine.min.js" defer is:inline></script>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-800 antialiased font-sans">
    <header class="bg-white border-b border-slate-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center space-x-2 text-xl font-bold text-primary-600 hover:text-primary-700 transition-colors">
              <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M3.75 3A.75.75 0 003 3.75v16.5c0 .414.336.75.75.75h16.5A.75.75 0 0021 20.25V3.75A.75.75 0 0020.25 3H3.75zM6.5 6.25a.75.75 0 01.75-.75h2.5a.75.75 0 010 1.5h-2.5a.75.75 0 01-.75-.75zm0 3.5a.75.75 0 01.75-.75h6.5a.75.75 0 010 1.5h-6.5a.75.75 0 01-.75-.75zm0 3.5a.75.75 0 01.75-.75H17a.75.75 0 010 1.5H7.25a.75.75 0 01-.75-.75zm.75 2.75a.75.75 0 000 1.5h4.5a.75.75 0 000-1.5h-4.5z" clip-rule="evenodd" />
              </svg>
              <span>Real Estate Accounting</span>
            </a>
          </div>
          <nav class="hidden sm:flex items-center space-x-4">
            <a href="#features" class="px-3 py-2 text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors">
              Features
            </a>
            {/* Add more nav links if needed: Pricing (if any future plans), Docs, About */}
            <a href="/auth/signin" class="px-3 py-2 text-sm font-medium text-slate-600 hover:text-primary-600 transition-colors">
              Sign In
            </a>
            <a 
              href="/auth/signup" 
              class="px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg shadow-sm hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
            >
              Sign Up Free
            </a>
          </nav>
          <div class="sm:hidden">
            {/* Mobile menu button - can be implemented with Alpine.js */}
            <button type="button" class="text-slate-500 hover:text-primary-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500" aria-label="Open menu" x-data="{ open: false }" @click="open = !open">
              <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
      {/* Mobile menu, show/hide based on Alpine.js state */}
      </header>
    
    <main class="flex-grow">
      <section class="bg-gradient-to-br from-white to-slate-100 py-16 sm:py-24 lg:py-32">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="lg:grid lg:grid-cols-12 lg:gap-12 items-center">
            <div class="lg:col-span-6 text-center lg:text-left">
              <h1 class="text-4xl font-extrabold text-slate-900 sm:text-5xl md:text-6xl tracking-tight">
                Real Estate Accounting
                <span class="block text-primary-600 xl:inline mt-1 sm:mt-2">Made Simple & Free</span>
              </h1>
              <p class="mt-5 text-lg text-slate-600 sm:mt-6 sm:text-xl lg:text-lg xl:text-xl max-w-xl mx-auto lg:mx-0">
                A zero-cost, high-performance accounting solution designed for real estate owners, property managers, and investors. GAAP-compliant, intuitive, and scalable.
              </p>
              <div class="mt-8 sm:mt-10 flex flex-col sm:flex-row sm:justify-center lg:justify-start space-y-4 sm:space-y-0 sm:space-x-4">
                <a 
                  href="/auth/signup"
                  class="w-full sm:w-auto px-8 py-3.5 bg-primary-600 text-white text-base font-semibold rounded-lg shadow-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-transform transform hover:scale-105 flex items-center justify-center"
                >
                  Get Started For Free
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a 
                  href="/auth/signin"
                  class="w-full sm:w-auto px-8 py-3.5 bg-slate-100 text-primary-700 text-base font-semibold rounded-lg shadow-md hover:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors flex items-center justify-center border border-slate-300"
                >
                  Sign In
                </a>
              </div>
            </div>
            <div class="mt-12 lg:mt-0 lg:col-span-6 relative">
              {/* Placeholder for a more engaging image or illustration */}
              <div class="bg-slate-200 aspect-video rounded-xl shadow-2xl flex items-center justify-center p-8">
                {/* Example: Screenshot or abstract graphic */}
                <img src="https://placehold.co/600x400/E2E8F0/4A5568?text=App+Screenshot+Here&font=inter" alt="Real Estate Accounting App Screenshot" class="rounded-lg object-cover w-full h-full"/>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="py-16 sm:py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-base font-semibold text-primary-600 tracking-wide uppercase">Key Features</h2>
            <p class="mt-2 text-3xl font-extrabold text-slate-900 sm:text-4xl">
              Everything you need for smart real estate accounting
            </p>
          </div>
          <div class="mt-16 grid gap-10 md:grid-cols-2 lg:grid-cols-3">
            {features.map(feature => (
              <div class="bg-slate-50 p-6 rounded-xl shadow-lg border border-slate-100 hover:shadow-2xl transition-shadow duration-300">
                <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-primary-600 text-white mb-5 shadow-md">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path></svg>
                </div>
                <h3 class="text-lg font-semibold text-slate-900">{feature.name}</h3>
                <p class="mt-2 text-base text-slate-600">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
      
      {/* Optional: Call to Action Section */}
      <section class="py-16 sm:py-24 bg-primary-700 text-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl font-extrabold sm:text-4xl">
            Ready to take control of your real estate finances?
          </h2>
          <p class="mt-4 text-lg text-primary-100">
            Sign up today for free and experience the simplicity and power of dedicated real estate accounting.
          </p>
          <div class="mt-8">
            <a 
              href="/auth/signup"
              class="inline-block px-10 py-3.5 bg-white text-primary-700 text-base font-semibold rounded-lg shadow-md hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-primary-700 focus:ring-white transition-transform transform hover:scale-105"
            >
              Sign Up - It's Free!
            </a>
          </div>
        </div>
      </section>
    </main>
    
    <footer class="bg-white border-t border-slate-200 py-10">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        {/* Optional: Add links to privacy policy, terms, contact, etc. */}
        <p class="text-sm text-slate-500">
          Real Estate Accounting | &copy; {new Date().getFullYear()} All rights reserved.
        </p>
        {/* <p class="mt-1 text-xs text-slate-400">
          Built with Astro & Cloudflare
        </p> */}
      </div>
    </footer>
  </body>
</html>

---
// src/layouts/AppLayout.astro
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Real Estate Accounting</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Load HTMX and Alpine.js -->
    <script src="/htmx.min.js" is:inline></script>
    <script src="/alpine.min.js" defer is:inline></script>
  </head>
  <body class="min-h-screen bg-gray-50">
    <div class="flex h-screen overflow-hidden">
      <!-- Sidebar -->
      <aside class="w-64 bg-white border-r border-gray-200 hidden md:block">
        <div class="h-full flex flex-col">
          <div class="p-4 border-b border-gray-200">
            <h1 class="text-xl font-bold text-primary-600">Real Estate Accounting</h1>
          </div>
          <nav class="flex-1 overflow-y-auto p-4">
            <ul class="space-y-2">
              <li>
                <a href="/app/dashboard" class="block px-4 py-2 rounded-md hover:bg-gray-100">
                  Dashboard
                </a>
              </li>
              <li>
                <a href="/app/transactions" class="block px-4 py-2 rounded-md hover:bg-gray-100">
                  Transactions
                </a>
              </li>
              <li>
                <a href="/app/entities" class="block px-4 py-2 rounded-md hover:bg-gray-100">
                  Entities
                </a>
              </li>
              <li>
                <a href="/app/accounts" class="block px-4 py-2 rounded-md hover:bg-gray-100">
                  Accounts
                </a>
              </li>
              <li>
                <a href="/app/reports" class="block px-4 py-2 rounded-md hover:bg-gray-100">
                  Reports
                </a>
              </li>
            </ul>
          </nav>
          <div class="p-4 border-t border-gray-200">
            <a href="/app/settings" class="block px-4 py-2 rounded-md hover:bg-gray-100">
              Settings
            </a>
            <a href="/auth/signout" class="block px-4 py-2 rounded-md hover:bg-gray-100">
              Signout
            </a>
          </div>
        </div>
      </aside>
      
      <!-- Main content -->
      <main class="flex-1 overflow-y-auto bg-gray-50">
        <header class="bg-white border-b border-gray-200 p-4">
          <h2 class="text-xl font-semibold">{title}</h2>
        </header>
        <div class="p-6">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>